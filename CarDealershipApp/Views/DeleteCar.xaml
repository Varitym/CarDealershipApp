      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarDealershipApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DeleteCar">

    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="450" Stroke="Black" VerticalAlignment="Top" Width="800"/>
        <DataGrid x:Name="gridCars" HorizontalAlignment="Left" Height="265" Margin="0,0,0,175" VerticalAlignment="Bottom" Width="800" SelectionChanged="DataGrid_SelectionChanged"/>
        <Button Content="Delete Car" Click="DelBtn" HorizontalAlignment="Left" Height="96" Margin="590,314,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Refresh Warehouse" Click="RefreshFn" HorizontalAlignment="Left" Height="96" Margin="317,314,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Back" Click="BackFn" HorizontalAlignment="Left" Height="96" Margin="43,314,0,0" VerticalAlignment="Top" Width="200"/>

    </Grid>
</Page>
